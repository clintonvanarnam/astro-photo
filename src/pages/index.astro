---
import { client } from '../lib/sanityClient.js'
import { photosQuery, aboutQuery } from '../lib/queries.js'

import { ViewTransitions } from 'astro:transitions'
import SlideTransition from '../components/SlideTransition.astro'

const PAGE_SIZE = 120;
let allPosts = [];
let aboutContent = null;
let fetchError = null;

function shuffle(array: any[]) {
  let currentIndex = array.length, randomIndex;
  while (currentIndex != 0) {
    randomIndex = Math.floor(Math.random() * currentIndex);
    currentIndex--;
    [array[currentIndex], array[randomIndex]] = [array[randomIndex], array[currentIndex]];
  }
  return array;
}

try {
  allPosts = await client.fetch(photosQuery);
  if (!Array.isArray(allPosts)) allPosts = [];
  allPosts = shuffle(allPosts);
  
  aboutContent = await client.fetch(aboutQuery);
} catch (e) {
  fetchError = (e as Error).message || e?.toString() || 'Unknown error';
  allPosts = [];
}
